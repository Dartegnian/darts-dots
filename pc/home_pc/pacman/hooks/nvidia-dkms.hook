[Trigger]
Operation=Install
Operation=Upgrade
Operation=Remove
Type=Package
Target=chaotic-nvidia-dkms-tkg
Target=linux-tkg-pds-zen
# Change the linux part above and in the Exec line if a different kernel is used

[Action]
Description=Update Nvidia module in initcpio
Depends=mkinitcpio
When=PostTransaction
NeedsTargets
Exec=/bin/sh -c 'while read -r trg; do case $trg in linux) exit 0; esac; done; /usr/bin/mkinitcpio -P linux-tkg-pds-zen'
